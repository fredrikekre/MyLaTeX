% Commands for often used things
\newcommand*{\half}{\frac{1}{2}} % One half


% Big brackets of different forms
\newcommand{\bigp}[1]{\left( #1 \right)} % Big parentheses
\newcommand{\bigb}[1]{\left[ #1 \right]} % Big bracket
\newcommand{\bigc}[1]{\left\{ #1 \right\}} % Big curly-bracket

% Reference shortcuts
\newcommand{\fig}[1]{Figure~\ref{#1}}
\newcommand{\eq}[1]{Equation~\eqref{#1}}

